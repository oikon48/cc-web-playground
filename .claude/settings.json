{
	"$schema": "https://json.schemastore.org/claude-code-settings.json",
	"model": "opus",
	"permissions": {
		"allow": ["Bash(gh:*)"]
	},
	"hooks": {
		"Stop": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": ".claude/hooks/stop-hook.sh"
					},
					{
						"type": "prompt",
						"prompt": "Return {\"continue\": false, \"stopReason\": \"ðŸŽƒ Session ended by prompt hook!\"}"
					}
				]
			}
		]
	},
	"mcpServers": {
		"context7": {
			"type": "stdio",
			"command": "npx",
			"args": ["-y", "@upstash/context7-mcp"],
			"env": {}
		}
	},
	"enableAllProjectMcpServers": true
}
